-------------------------TECMIS DATABASE-----------------------------

//Login root user

mysql -u root -p
Enter password: ****

CREATE DATABASE TECMIS_FOT;

--Create Admin with password

CREATE USER 'Admin'@'localhost' IDENTIFIED BY 'adminpwd';

GRANT ALL PRIVILEGES ON tecmis_fot.*
TO 'Admin'@'localhost'
WITH GRANT OPTION;

FLUSH PRIVILEGES;

--Create Dean with password

CREATE USER 'Dean'@'localhost' IDENTIFIED BY 'deanpwd';

GRANT ALL PRIVILEGES ON tecmis_fot.* 
TO 'Dean'@'localhost';

FLUSH PRIVILEGES;

--Create Lecturer with password

CREATE USER 'Lecturer'@'localhost' IDENTIFIED BY 'lecturerpwd';

GRANT ALL PRIVILEGES ON tecmis_fot.* 
TO 'Lecturer'@'localhost';

FLUSH PRIVILEGES;

--Create Technical officer with password

CREATE USER 'Technical_officer'@'localhost' IDENTIFIED BY 'techpwd';

GRANT SELECT,INSERT,UPDATE ON tecmis_fot.Attendance, attendance_count_view ,attendance_eligibility_view 
TO 'Technical_officer'@'localhost';

FLUSH PRIVILEGES;


--Create Student with password

CREATE USER 'Student'@'localhost' IDENTIFIED BY 'studentpwd';

GRANT SELECT ON tecmis_fot.marks,ca_marks_eligible, final_mark_view ,  grade 
TO 'student'@'localhost';

FLUSH PRIVILEGES;
