Attendance_count_view..............
CREATE VIEW Attendance_count_view AS
SELECT
    attendance.Stu_id,
    attendance.Course_code,
    attendance.Type,
	
    COUNT(IF(attendance.Status = 'present', 1, NULL)) AS Present_Count
FROM
    attendance
JOIN
    student ON attendance.Stu_id = student.Stu_id
WHERE
    attendance.Type NOT IN ('E_T', 'E_P','E_TP') 
GROUP BY
    attendance.Stu_id,
    attendance.Course_code,
    attendance.Type;

grade_point_view..............
CREATE VIEW grade_point_view AS
SELECT
    final_mark_view.stu_id,
    final_mark_view.course_code,
    final_mark_view.final_mark,
    student.Student_State,
    IF(student.Student_State = 'Repeat', 2.0,
        IF(final_mark_view.final_mark >= 90, 4.0,
        IF(final_mark_view.final_mark >= 84, 4.0,
        IF(final_mark_view.final_mark >= 75, 3.7,
        IF(final_mark_view.final_mark >= 70, 3.3,
        IF(final_mark_view.final_mark >= 65, 3.0,
        IF(final_mark_view.final_mark >= 60, 2.7,
        IF(final_mark_view.final_mark >= 55, 2.3,
        IF(final_mark_view.final_mark >= 50, 2.0,
        IF(final_mark_view.final_mark >= 45, 1.7,
        IF(final_mark_view.final_mark >= 40, 1.3,
        IF(final_mark_view.final_mark >= 35, 1.0, 0.0)))))))))))) AS Grade_point
FROM
    student,final_mark_view
WHERE
    student.stu_id = final_mark_view.stu_id;
SGPA_view....................
CREATE VIEW SGPA_view AS
SELECT 
    grade_point_view.stu_id,
    (SUM(grade_point_view.Grade_point * course.Credits) / SUM(course.Credits)) AS SGPA
FROM 
    grade_point_view
JOIN 
    course ON grade_point_view.course_code = course.course_code
GROUP BY 
    grade_point_view.stu_id;

CGPA_view................
CREATE VIEW CGPA_view AS
SELECT 
    grade_point_view.stu_id,
    (SUM(grade_point_view.Grade_point * course.Credits) / SUM(course.Credits)) AS CGPA
FROM 
    grade_point_view
JOIN 
    course ON grade_point_view.course_code = course.course_code
WHERE 
    course.course_code != 'ENG1222'  
GROUP BY 
    grade_point_view.stu_id;
